{
  "root": true,
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      { "argsIgnorePattern": "^_" }
    ],
    "no-console": "warn",
    "prefer-const": "error",
    "no-var": "error",
    "no-undef": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "build/",
    ".expo/",
    "web-build/",
    "android/",
    "ios/",
    "*.config.js"
  ]
}
